<!DOCTYPE html>
<html>
  <head>
  <link rel="stylesheet" href="/assets/stylesheets/application.css">
    <title>Home</title>
  </head>

  <body>
    <% if @users %>
    <section class="row wrap borded user-heading">
  <img class="imgs" src="<%= @users.photo %>" alt="User Image" />
  <div class="column post-description">
    <h2><%= @users.name %></h2>
    <p class="number-post">Number of posts: <%= @users.posts.count %></p>
  </div>
</section>


    <% @posts.each do |post| %>
      <li class="column borded">
        <div class="post">
          <h3><%= post.title %></h3>
          <p><%= post.content %></p>
          <div class="row btns-post">
            <p>Comments: <%= post.comments.count %></p>
            <p>Likes: <%= post.likes.count %></p>
          </div>
        </div>
        <ul class="no-style list-comment borded">
          <% post.comments.each do |comment| %>
            <li><%= comment.author.name %>: <%= comment.text %></li>

          <% end %>
        </ul>
      </li>
    <% end %>

    <button class="btn-show-post">Pagination</button>
    <% end %>
  </body>
</html>
