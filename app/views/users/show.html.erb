<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/assets/stylesheets/application.css">
    <title>Home</title>
  </head>

  <body>
    <section class="row wrap borded user-heading">
      <% if @users %>
        <img src="<%= @users.photo %>" alt="User Image" />
    
        <div class="column post-description">
          <h2>
            <a href="<%= user_path(@users) %>"><%= @users.name %></a></h2>
          <p class="number-post">Number of post: <%= @users.posts.count %></p>
        </div>
      <% end %>
    </section>

    <section class="column borded bio">
      <h2>Bio</h2>
      <% if @users %>
        <p><%= @users.bio %></p>
      <% end %>
    </section>

    <div class="flex-center column">
      <% if @users %>
        <ul class="max-width">
          <% User.includes(:posts).each do |user| %>
            <% user.posts.each do |post| %>
              <li class="column borded post">
                <h3>
                  <a href="<%= user_post_path(user, post) %>">
                <%= post.title %>
                  
                </h3>
                <p><%= post.text %></p>
                </a>
                <div class="row btns-post">
                  <p>Comments: <%= post.comments.count %></p>
                  <p>Likes: <%= post.likes.count %></p>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% end %>
      <button class="btn-show-post">See All Posts</button>
      <button class="btn-show-post">
        <a href="<%= new_user_post_path(@users) %>" class="no-style">Create A Post</a>
      </button>
      <button class="btn-show-post">
        <a href="<%= users_path %>" class="no-style"> Back </a>
      </button>
    </div>
  </body>
</html>
